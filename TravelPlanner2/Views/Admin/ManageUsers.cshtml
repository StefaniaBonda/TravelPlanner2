@model IEnumerable<TravelPlanner2.Models.User>
@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/LoggedInLayout.cshtml";
}
<h3>Manage Users</h3>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    @Html.ActionLink("Edit", "Edit","Users", new { id = user.Id }, new { @class = "btn btn-sm btn-warning" }) |
                    @Html.ActionLink("Details", "Details","Users", new { id = user.Id }, new { @class = "btn btn-sm btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", "Users",new { id = user.Id }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
