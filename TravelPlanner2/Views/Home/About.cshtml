@{ 
    Layout = "~/Views/Shared/AboutLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>About Us</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            background-color: #fdfaf3;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-image: url('/Content/planes-bgg.png');
            background-size: cover;
            background-repeat: repeat;
            background-attachment: fixed;
        }
        .hero-section {
            color: #222;
            padding: 5rem 0;
            background: #f8f9fa;
        }

        .team-photo {
            width: 140px;
            height: 140px;
            object-fit: cover;
            transition: transform 0.3s ease;
            cursor: pointer;
            border-radius: 50%;
            border: 3px solid transparent;
            background: white;
        }

            .team-photo:hover {
                transform: scale(1.1);
                border-color: #000DFF;
                box-shadow: 0 8px 15px rgba(0, 13, 255, 0.4);
            }

        .tech-badge {
            background: linear-gradient(45deg, #6B73FF, #000DFF);
            font-weight: 600;
            font-size: 1.1rem;
            padding: 0.5rem 1.2rem;
            border-radius: 30px;
            color: white;
            user-select: none;
            box-shadow: 0 4px 10px rgba(107, 115, 255, 0.6);
            transition: background 0.3s ease, box-shadow 0.3s ease;
        }

            .tech-badge:hover {
                background: linear-gradient(45deg, #000DFF, #6B73FF);
                box-shadow: 0 6px 15px rgba(0, 13, 255, 0.7);
            }

        .feedback-form input,
        .feedback-form textarea {
            border: none;
            border-bottom: 2px solid #ccc;
            padding: 0.5rem 0;
            font-size: 1.1rem;
            font-weight: 400;
            outline: none;
            transition: border-color 0.3s ease;
            background: transparent;
            font-family: inherit;
            color: #222;
            resize: vertical;
        }

            .feedback-form input::placeholder,
            .feedback-form textarea::placeholder {
                color: #aaa;
                font-style: italic;
            }

            .feedback-form input:focus,
            .feedback-form textarea:focus {
                border-bottom-color: #000DFF;
            }

        .btn-submit {
            background: transparent;
            border: 2px solid #000DFF;
            color: #000DFF;
            padding: 0.75rem 3rem;
            font-weight: 600;
            font-size: 1.15rem;
            border-radius: 50px;
            cursor: pointer;
            transition: all 0.35s ease;
            user-select: none;
            font-family: inherit;
        }

            .btn-submit:hover {
                background: #000DFF;
                color: white;
                box-shadow: 0 8px 20px rgba(0, 13, 255, 0.6);
            }
    </style>
</head>
<body>

    <!-- HERO SECTION -->
    <section class="hero-section text-center">
        <div class="container">
            <h1 class="display-4 fw-bold">Travel smarter. Explore easier.</h1>
            <p class="lead mt-3 mx-auto">
                We help you turn city chaos into simple, beautiful trips. Just choose what you want to see — cultural landmarks, nature trails, or culinary hotspots — and we’ll build your day.
            </p>
        </div>
    </section>

    <!-- ABOUT US -->
    <section class="about-us-section my-5">
        <div class="container">
            <div class="card p-5 shadow-lg border-0 rounded-4">
                <h2 class="mb-4">About Us</h2>
                <p>
                    Have you ever found yourself in a new city, excited to explore but unsure where to start? We’ve been there too — especially during our trip to Paris last year. That experience inspired us to create a smarter, simpler way to plan your travels.
                </p>
                <p>
                    We’re a team of four computer science students passionate about technology, design, and improving the travel experience. Our platform helps you organize your trips with ease.
                </p>
                <p>
                    From discovering new ideas to navigating with interactive maps, we make sure everything is just a click away. Our mission is to make planning your journey as exciting and seamless as the adventure itself.
                </p>
            </div>
        </div>
    </section>

    <!-- TEAM SECTION -->
    <section class="team-section my-5">
        <div class="container text-center">
            <h2 class="mb-5">Meet the Team</h2>
            <div class="row justify-content-center g-4">
                <div class="col-6 col-md-3">
                    <div class="team-card shadow-sm rounded-4 p-3 bg-white h-100">
                        <img src="~/Content/StefiB.jpeg" alt="Stefi B." class="img-fluid team-photo mb-3" />
                        <h5 class="fw-semibold">Stefania</h5>
                        <p class="text-muted">  Team Leader</p>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="team-card shadow-sm rounded-4 p-3 bg-white h-100">
                        <img src="~/Content/StefiM.jpeg" alt="Alin T." class="img-fluid team-photo mb-3" />
                        <h5 class="fw-semibold">Stefania</h5>
                        <p class="text-muted">Software Developer</p>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="team-card shadow-sm rounded-4 p-3 bg-white h-100">
                        <img src="~/Content/Andreea.jpeg" alt="Adrian T." class="img-fluid team-photo mb-3" />
                        <h5 class="fw-semibold">Andreea.</h5>
                        <p class="text-muted">Software Developer</p>
                    </div>
                </div>
                <div class="col-6 col-md-3">
                    <div class="team-card shadow-sm rounded-4 p-3 bg-white h-100">
                        <img src="~/Content/Deea.jpeg" alt="Patricia M." class="img-fluid team-photo mb-3" />
                        <h5 class="fw-semibold">Deea</h5>
                        <p class="text-muted">Tester</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- MISSION -->
    <section class="mission-section my-5">
        <div class="container">
            <h2 class="mb-3">Our Mission</h2>
            <p class="fs-5 text-secondary">
                We believe that planning your trip should be just as fun as going on it. Our mission is to take away the guesswork and make itinerary creation fast, intuitive, and enjoyable. Focus on exploring — we’ll handle the rest.
            </p>
        </div>
    </section>

    <!-- TECH STACK -->
    <section class="tech-stack-section my-5">
        <div class="container text-center">
            <h2 class="mb-3">Technologies We Use</h2>
            <div class="d-flex flex-wrap gap-3 justify-content-center">
                <span class="badge tech-badge">C#</span>
                <span class="badge tech-badge">ASP.NET MVC</span>
                <span class="badge tech-badge">Entity Framework</span>
                <span class="badge tech-badge">SQL Server</span>
            </div>
        </div>
    </section>

    <!-- FEEDBACK -->
    <section class="feedback-section my-5">
        <div class="container">
            <h2 class="mb-4 text-center fw-bold">Send Us Feedback</h2>
            <p class="text-center text-muted mb-5 fs-5">If you have suggestions or want to say hi, feel free to contact us below!</p>
            <form method="post" action="@Url.Action("Submit", "Feedback")" class="feedback-form mx-auto" style="max-width:600px;">

                <div class="form-group mb-4">
                    <input type="text" name="Name" placeholder="Your name" required autocomplete="name" class="form-control bg-transparent border-0 border-bottom" />
                </div>
                <div class="form-group mb-4">
                    <input type="email" name="Email" placeholder="Your email" required autocomplete="email" class="form-control bg-transparent border-0 border-bottom" />
                </div>
                <div class="form-group mb-4">
                    <textarea name="Message" placeholder="Your message..." rows="5" required class="form-control bg-transparent border-0 border-bottom"></textarea>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn-submit">Send</button>
                </div>
            </form>
        </div>
    </section>

</body>
</html>
