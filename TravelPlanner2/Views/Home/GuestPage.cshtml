@model List<TravelPlanner2.Controllers.ViewTripsController.TripViewModel>
@{
    ViewBag.Title = "Available trips";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">You haven't created any trips yet.</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var trip in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary">@trip.Name</h5>

                            @if (trip.CityNames != null && trip.CityNames.Any())
                            {
                                <p class="card-subtitle mb-2 text-muted">
                                    <strong>Trip City:</strong> @string.Join(", ", trip.CityNames.Take(3))
                                </p>
                            }

                            <p class="card-text mt-2">@trip.Description</p>

                            <div class="mt-auto">
                                <p>
                                    <strong>Status:</strong>
                                    @if (trip.Published)
                                    {
                                        <span class="badge bg-success">Published</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Unpublished</span>
                                    }
                                </p>                               
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>


