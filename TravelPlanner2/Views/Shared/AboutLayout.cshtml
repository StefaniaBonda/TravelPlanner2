@*
    Layout for the About page
*@
<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TripTide</title>

    <link rel="stylesheet" href="@Url.Content("~/Content/style.css")" />
    <link href="https://fonts.googleapis.com/css2?family=Lora&family=Roboto&display=swap" rel="stylesheet" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="site-header">
        <div class="logo">
            <a href="@Url.Action("Index", "Home")">
                <img src="@Url.Content("~/Content/logo.png")" alt="TripTide Logo">
            </a>

        </div>

        <nav class="main-nav">
            <ul>
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
            </ul>
        </nav>
    </header>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer class="site-footer">
        <p>&copy; @DateTime.Now.Year - TripTide</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
</body>
</html>
