@model TravelPlanner2.Models.User

@{
    ViewBag.Title = "Your Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-section">
    <h1 class="text-center">Profilul tău</h1>

    <div class="styled-form" style="text-align: left;">
        <div class="form-group">
            <label><strong>👤 Nume:</strong></label>
            <p>@Model.Name</p>
        </div>

        <div class="form-group">
            <label><strong>📧 Email:</strong></label>
            <p>@Model.Email</p>
        </div>

        <div class="form-group">
            <label><strong>🛡️ Rol:</strong></label>
            <p>@Model.Role</p>
        </div>

        <div style="text-align: center; margin-top: 20px;">
            <a href="@Url.Action("EditProfile", "Users")" class="btn btn-primary">✏️ Editează Profilul</a>
        </div>
    </div>
</div>
